{
	"manifest_version": 3,
	"name": "Video Speed",
	"version": "1.0",
	"description": "Automatically adjusts video playback speed on any websites.",
	"permissions": ["activeTab", "storage", "scripting"],
	"action": {
		"default_popup": "popup/options.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	]
}
