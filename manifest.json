{
	"manifest_version": 3,
	"name": "Video Speed Adjuster",
	"version": "1.0",
	"description": "Automatically adjusts video playback speed on specified websites.",
	"permissions": ["activeTab", "storage", "scripting"],
	"action": {
		"default_popup": "popup/options.html"
	},
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*", "*://*.disneyplus.com/*", "*://*.netflix.com/*"],
			"js": ["content.js"]
		}
	]
}
